@model ModelProject.LabelsModel
@{Layout = null;
    
 }

@Html.Action("_Meta", "Home")

<script type="text/javascript" src="~/js/jquery.min.js"></script>
<article class="page-container">
    <form class="form form-horizontal" id="formadd">
        @Html.HiddenFor(k => k.ListId)
        <div style="height:20px;"></div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>送货时间：</label>
            <div class="formControls col-xs-8 col-sm-9">
				<span style="width:200px;">
					@Html.TextBoxFor(k => k.DeliveryTime, new { @class = "input-text Wdate", @onfocus = "WdatePicker()", @style = "width:150px;"})
				</span>
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>送货单号：</label>
            <div class="formControls col-xs-8 col-sm-9">
				<span style="width:200px;">
					@Html.TextBoxFor(k => k.OrderNum, new { @class = "input-text",@style="width:200px;" })
				</span>
            </div>
        </div>
        <div style="height:30px;"></div>
        <div class="row cl mt-30">
            <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
                <button class="btn btn-primary radius" type="submit" style="width:120px;"><i class="Hui-iconfont">&#xe632;</i>保存</button>
                <button onClick="removeIframe();" class="btn btn-default radius ml-20" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
            </div>
        </div>
    </form>
</article>
<script type="text/javascript" src="~/js/DatePicker/4.8/WdatePicker.js"></script>
<script type="text/javascript" src="~/js/ajaxScript.js?v=1"></script>
<script type="text/javascript" src="~/js/layer/layer.js"></script>
<script type="text/javascript" src="~/js/jquery.validation/jquery.validate.js"></script>
<script type="text/javascript" src="~/js/jquery.validation/messages_zh.js"></script>
<script type="text/javascript">

    $(function () {
        //表单验证
        $("#formadd").validate({
            rules: {
                DeliverTime: { required: true, },
				OrderNum: { required: true, },
				ListId: { required: true, },
            },
            onkeyup: false,
            focusCleanup: true,
            success: "valid",
            submitHandler: function (form) {
                //构造上传数据
                var param = {};
                var paramArray = $(form).serializeArray();
                for (var i = 0; i < paramArray.length; ++i) {
                    var o = paramArray[i];
                    param[o["name"]] = o["value"];
				};
				$.post("/Delivery/PostCheck",param, function (d) { if (d == "1") {
                        var MSG = "送货操作，ID：@Model.ListId，操作网址：/Delivery/PostCheck";
                        AddWorkLogs(MSG, 5);
                        layer.msg("操作成功！", { icon: 1, time: 1000 });
                    } else {
                        layer.msg("服务器错误！", { icon: 2, time: 1000 });
                    }
                    setTimeout(function () {
                        parent.window.location.reload();
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                    }, 1000);});
            }
        });
    });

</script>

<!--/请在上方写此页面业务相关的脚本-->
</body>
</html>