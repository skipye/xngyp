   //         var Vtext = $("#FatherId").find("option:selected").text();
			//$("#ProductSN").val(Vtext.split('_')[0]);
            var ProUrl = "@Url.Action("GetProNameDrolistBySN","Products")";
            $.post(ProUrl, { ProSN: ProductSNId }, function (data) {
