@using Common;
@model ModelProject.SKModel
@{
    Layout = null;

	DateTime TimeNow = DateTime.Now;
    var YearStartTime = DataTimeManager.GetTimeStartByType(DataTimeType.Year, TimeNow).ToString("yyyy-MM-dd");
    var YearEndTime = DataTimeManager.GetTimeEndByType(DataTimeType.Year, TimeNow).ToString("yyyy-MM-dd");
    var MonthStartTime = DataTimeManager.GetTimeStartByType(DataTimeType.Month, TimeNow).ToString("yyyy-MM-dd");
    var MonthEndTime = DataTimeManager.GetTimeEndByType(DataTimeType.Month, TimeNow).ToString("yyyy-MM-dd");
    var WeekStartTime = DataTimeManager.GetTimeStartByType(DataTimeType.Week, TimeNow).ToString("yyyy-MM-dd");
    var WeekEndTime = DataTimeManager.GetTimeEndByType(DataTimeType.Week, TimeNow).ToString("yyyy-MM-dd");
    var StartTime = TimeNow.ToString("yyyy-MM-dd");
	var EndTime = TimeNow.AddDays(1).ToString("yyyy-MM-dd");
}
	<table class="table table-border table-bordered table-bg mt-10">
		<thead>
			<tr>
				<th colspan="7" scope="col">收款情况（<span class="c-green">单位：元</span>）</th>
			</tr>
			<tr class="text-c">
				<th>类别</th>
				<th>今日</th>
				<th>本周</th>
				<th>本月</th>
				<th>本年</th>
			</tr>
		</thead>
		<tbody>
			<tr class="text-c">
				<td>家具</td>
				<td class="c-blue" onclick="goUrl('家具今日收款','@Url.Action("FSKList","Admin",new { StartTime=StartTime,EndTime=EndTime})')">@(Model.FSK.TodayCount ?? 0)</td>
				<td class="c-blue" onclick="goUrl('家具本周收款','@Url.Action("FSKList","Admin",new { StartTime=WeekStartTime,EndTime=WeekEndTime})')">@(Model.FSK.WeekCount ?? 0)</td>
				<td class="c-blue" onclick="goUrl('家具本月收款','@Url.Action("FSKList","Admin",new { StartTime=MonthStartTime,EndTime=MonthEndTime})')">@(Model.FSK.MonthCount ?? 0)</td>
				<td>@(Model.FSK.YearCount ?? 0)</td>
			</tr>
			<tr class="text-c">
				<td>工艺品</td>
				<td class="c-blue" onclick="goUrl('工艺品今日收款','@Url.Action("SKList","Admin",new { StartTime=StartTime,EndTime=EndTime})')">@(Model.SK.TodayCount ?? 0)</td>
				<td class="c-blue" onclick="goUrl('工艺品本周收款','@Url.Action("SKList","Admin",new { StartTime=WeekStartTime,EndTime=WeekEndTime})')">@(Model.SK.WeekCount ?? 0)</td>
				<td class="c-blue" onclick="goUrl('工艺品本月收款','@Url.Action("SKList","Admin",new { StartTime=MonthStartTime,EndTime=MonthEndTime})')">@(Model.SK.MonthCount ?? 0)</td>
				<td>@(Model.SK.YearCount ?? 0)</td>
			</tr>
		</tbody>
	</table>